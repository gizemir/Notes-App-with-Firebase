<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border rengi ve kalınlığı -->
    <stroke
        android:width="2dp"
        android:color="#FF0000"/> <!-- Burada kırmızı renkli bir border tanımladık -->

    <!-- İçerideki boşluk (padding) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>

    <!-- Arka plan rengi (opsiyonel) -->
    <solid android:color="#FFFFFF"/> <!-- Beyaz arka plan -->

    <!-- Köşe yuvarlama (opsiyonel) -->
    <corners android:radius="8dp"/>
</shape>
